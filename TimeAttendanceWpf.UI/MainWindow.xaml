<Window x:Class="TimeAttendanceWpf.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TimeAttendanceWpf.UI.ViewModels"
        xmlns:views="clr-namespace:TimeAttendanceWpf.UI.Views"
        Title="Time &amp; Attendance"
        Height="450"
        Width="800">

    <Window.Resources>
        <!-- Select Employee -->
        <DataTemplate DataType="{x:Type vm:SelectEmployeeViewModel}">
            <views:SelectEmployeeView />
        </DataTemplate>

        <!-- Employee Dashboard -->
        <DataTemplate DataType="{x:Type vm:EmployeeDashboardViewModel}">
            <views:EmployeeDashboardView />
        </DataTemplate>

        <!-- Manager Dashboard -->
        <DataTemplate DataType="{x:Type vm:ManagerDashboardViewModel}">
            <views:ManagerDashboardView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
