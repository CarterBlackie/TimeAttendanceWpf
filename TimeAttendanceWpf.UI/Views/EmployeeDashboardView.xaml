<UserControl x:Class="TimeAttendanceWpf.UI.Views.EmployeeDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel>
            <TextBlock Text="{Binding Title}" FontSize="22" Margin="0,0,0,6"/>
            <TextBlock Text="{Binding WeekLabel}" FontSize="14" Margin="0,0,0,2"/>
            <TextBlock Text="{Binding StatusText}" FontSize="14" Margin="0,0,0,6"/>
            <TextBlock Text="{Binding ManagerNote}" FontSize="13" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Controls -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,12">
            <Button Content="Clock In" Command="{Binding ClockInCommand}" Height="34" Width="120" Margin="0,0,10,0"/>
            <Button Content="Clock Out" Command="{Binding ClockOutCommand}" Height="34" Width="120" Margin="0,0,10,0"/>
            <Button Content="Submit Week" Command="{Binding SubmitTimesheetCommand}" Height="34" Width="120" Margin="0,0,10,0"/>

            <Button Content="Prev Week" Command="{Binding PrevWeekCommand}" Height="34" Width="120" Margin="0,0,10,0"/>
            <Button Content="Next Week" Command="{Binding NextWeekCommand}" Height="34" Width="120" Margin="0,0,10,0"/>

            <Button Content="Back" Command="{Binding BackCommand}" Height="34" Width="120"/>
        </WrapPanel>

        <!-- Totals -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Regular:" FontSize="14" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding RegularHours}" FontSize="14" Margin="0,0,18,0"/>

            <TextBlock Text="OT:" FontSize="14" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding OvertimeHours}" FontSize="14" Margin="0,0,18,0"/>

            <TextBlock Text="Total:" FontSize="14" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding TotalHours}" FontSize="14"/>
        </StackPanel>

        <!-- Lists -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Today's Punches" Margin="0,0,12,0">
                <ListBox ItemsSource="{Binding PunchLines}" />
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Week Shifts (Rounded)" Margin="12,0,0,0">
                <ListBox ItemsSource="{Binding ShiftLines}" />
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
